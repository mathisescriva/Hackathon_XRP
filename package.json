{
  "name": "hackathon-xrp-backend",
  "version": "1.0.0",
  "description": "Backend API pour gestion de shifts avec XRPL, AssemblyAI et LLM",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "create-db": "tsx src/db/create-db.ts",
    "migrate": "tsx src/db/migrate.ts",
    "seed": "tsx src/db/seed.ts",
    "create-test-shift": "tsx src/db/create-test-shift.ts",
    "create-small-shift": "tsx src/db/create-small-shift.ts",
    "check-xrpl": "tsx src/test/check-xrpl-balance.ts",
    "diagnose-xrpl": "tsx src/test/diagnose-xrpl.ts",
    "fix-xrpl-addresses": "tsx src/db/fix-xrpl-addresses.ts",
    "setup-db": "npm run create-db && npm run migrate && npm run seed",
    "test:simple": "tsx src/test/simple-test.ts",
    "test:full": "tsx src/test/full-test.ts"
  },
  "keywords": ["xrpl", "timesheet", "blockchain"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "assemblyai": "^4.19.0",
    "openai": "^4.20.1",
    "xrpl": "^2.7.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

