# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hackathon_xrp

# JWT
JWT_SECRET=your-secret-key-change-in-production

# AssemblyAI
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# LLM (OpenAI)
OPENAI_API_KEY=your-openai-api-key
# Alternative: use other LLM services
LLM_PROVIDER=openai

# XRPL
XRPL_NETWORK=testnet
# XRPL account for platform operations (optional, can use user accounts)
XRPL_PLATFORM_ADDRESS=rYourPlatformAddress...
XRPL_PLATFORM_SECRET=sYourPlatformSecret...

# File Storage (local for demo, or S3)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

